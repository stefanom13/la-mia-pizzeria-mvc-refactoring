@{
    ViewData["Title"] = "Benvenuto in PizzaExperis";
}

<div class="text-center">
    <h1>Qui troveremo tutte le nostre pizze</h1>
</div>

@model List<Pizza>

<div class="text-center">
    <h1>Benvenuti nel controller pizza</h1>
   
     <div>
        <a class="btn" href="@Url.Action("Create","Pizza")">Crea Pizza</a>
    </div>
</div>

@{
    @if (Model == null) 
    {
        // se non c'è nessun elemento
    <div class="col-12">
       <p class="text-center">Nessuna pizza da visualizzare!</p>
    </div>
    }
else
    {
     @foreach(Pizza pizza in Model)
    {
        <div class="col-auto">

                <div class="card" style="width: 18rem; padding: 0;">
                    <img src="@pizza.PathImage" class="card-img-top card-img" style="min-height: 200px; max-height: 200px; object-fit: cover; object-fit: center;" alt="">
                    <div class="card-body text-black">
                        <h5 class="card-title">@pizza.NomePizza</h5>
                     </div>
                       @*parte categorie*@
                     @if (@pizza.Categorie != null)
                    {
                       <p class="align-middle">@pizza.Categorie.NomeCategoria</p>
                    }
                    else
                    {
                        <p class="align-middle">Nessuna Categoria presente</p>
                    }
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">@pizza.Prezzo.ToString("C2")</li>
                       <button><a class="btn btn-success" href="@Url.Action("Details","Pizza",new { id = @pizza.Id})">Visualizza</a></button> 
                       <button><a class="btn btn-warning" href="@Url.Action("Edit","Pizza",new { id = @pizza.Id})">Modifica</a></button> 
                     <form asp-controller="Pizza" asp-action="Delete" asp-route-id="@pizza.Id" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger mt-2">Elimina</button>
                    </form>
                    </ul>
                </div>
            
        </div>
    } 
    }
}


 






